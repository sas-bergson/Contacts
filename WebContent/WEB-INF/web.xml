<?xml version="1.0" encoding="ISO-8859-1" ?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee">

    <display-name>Mon Repertoire de contacts</display-name>
    <description>
        Repertoire des contacts avec persistence des donnees en JavaEE.
    </description>

    <servlet>
        <servlet-name>contactlist</servlet-name>
        <servlet-class>servlet.ContactListServlet</servlet-class>
    </servlet>

  <servlet-mapping>
    <servlet-name>contactlist</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

   <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
        </jsp-property-group>
    </jsp-config>

</web-app>  